  <script>
    // Create falling hearts
    function dropHearts(count = 24){
      const w = window.innerWidth;
      for(let i=0;i<count;i++){
        const heart = document.createElement("div");
        heart.className = "heart";

        const x = Math.random() * w;
        const size = 10 + Math.random() * 18;
        const drift = (Math.random() * 120) - 60; // left/right
        const duration = 2.8 + Math.random() * 2.2;
        const delay = Math.random() * 0.35;

        heart.style.left = x + "px";
        heart.style.width = size + "px";
        heart.style.height = size + "px";
        heart.style.opacity = (0.5 + Math.random() * 0.45).toFixed(2);

        // random pink shade
        const shades = [
          "rgba(255,63,152,.95)",
          "rgba(255,111,178,.95)",
          "rgba(255,143,204,.95)",
          "rgba(255,90,170,.95)"
        ];
        heart.style.background = shades[Math.floor(Math.random()*shades.length)];

        document.body.appendChild(heart);

        const start = performance.now() + delay*1000;
        const startY = -30;
        const endY = window.innerHeight + 40;

        function animate(now){
          const t = (now - start) / (duration*1000);
          if(t < 0){ requestAnimationFrame(animate); return; }
          if(t >= 1){
            heart.remove();
            return;
          }

          // ease-in for falling
          const eased = t*t*(3 - 2*t);

          const y = startY + (endY - startY) * eased;
          const x2 = x + drift * Math.sin(t * Math.PI); // gentle sway
          const rot = 45 + (t * 360);

          heart.style.transform = `translate(${x2 - x}px, ${y}px) rotate(${rot}deg)`;
          heart.style.opacity = String((1 - t) * 0.95);

          requestAnimationFrame(animate);
        }
        requestAnimationFrame(animate);
      }
    }

    // On open
    window.addEventListener("load", () => dropHearts(34));

    // Button + click anywhere
    document.getElementById("moreHearts").addEventListener("click", (e) => {
      e.stopPropagation();
      dropHearts(28);
    });
    document.addEventListener("click", () => dropHearts(18));

    // More hearts when the page becomes visible again (optional cute effect)
    document.addEventListener("visibilitychange", () => {
      if(!document.hidden) dropHearts(14);
    });
  </script>
